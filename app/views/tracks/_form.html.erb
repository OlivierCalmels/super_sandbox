
<%= simple_form_for(@track) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
  </div>

  <div class="form-actions">
    <%= f.input :title %>
    <%= f.input :album %>
    <%= f.input :artist %>
    <%= f.button :submit %>
  </div>
<% end %>
